<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/_5sdp"
    android:orientation="vertical">


    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/_10sdp" />

    <com.example.hospitalapp.Utills.MyTextViewBold

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:text="Bank Management"
        android:textColor="@color/colorPrimaryDark"

        android:textSize="@dimen/_17ssp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/_10sdp" />

    <com.example.hospitalapp.Utills.MyTextViewBold
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="@dimen/_10sdp"
        android:text="Operation Type:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/_11ssp" />


    <Spinner
        android:id="@+id/spinner_operation_type"
        style="@style/spinner_style"
        android:layout_width="match_parent"
        android:layout_height="?attr/dropdownListPreferredItemHeight"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:entries="@array/array_operation_type" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/_15sdp" />

    <com.example.hospitalapp.Utills.MyTextViewBold
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="@dimen/_10sdp"
        android:text="Blood Type:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/_11ssp" />


    <Spinner
        android:id="@+id/spinner_blood_type"
        style="@style/spinner_style"
        android:layout_width="match_parent"
        android:layout_height="?attr/dropdownListPreferredItemHeight"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_10sdp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/_10sdp" />

    <com.example.hospitalapp.Utills.MyTextViewBold
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="@dimen/_10sdp"
        android:text="Blood bags Number:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/_11ssp" />

    <Spinner
        android:id="@+id/spinner_blood_bags_number"
        style="@style/spinner_style"
        android:layout_width="match_parent"
        android:layout_height="?attr/dropdownListPreferredItemHeight"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:entries="@array/array_blood_bags_number" />

    <com.example.hospitalapp.Utills.ButtonBold
        android:id="@+id/submit_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45_height"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_20sdp"
        android:background="@drawable/shape_login_background"
        android:gravity="center"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_12ssp" />

</LinearLayout>